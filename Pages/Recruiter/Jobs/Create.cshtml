@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.Recruiter.Jobs.CreateModel
@{
    ViewData["Title"] = "Post New Job";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ResuMate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-md fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <a href="/RecruiterDashboard" class="text-2xl font-bold text-blue-600">
                    <i class="fas fa-briefcase mr-2"></i>ResuMate
                </a>
                <span class="ml-4 text-gray-600">| @Model.CurrentRecruiter?.Company?.Name</span>
            </div>
            <div class="flex items-center space-x-4">
                <a href="/RecruiterDashboard" class="text-gray-600 hover:text-blue-600 transition">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
                </a>
                <form method="post" action="/Logout" class="inline">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </button>
                </form>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-20">
        <!-- Page Title -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-plus-circle text-blue-600 mr-2"></i>Post New Job
            </h1>
            <p class="text-gray-600 mt-2">Fill in the details below to create a new job posting</p>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
                <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                <i class="fas fa-exclamation-circle mr-2"></i>@TempData["Error"]
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                <i class="fas fa-exclamation-triangle mr-2"></i>Please fix the errors below:
                <ul class="list-disc list-inside mt-2">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Job Creation Form -->
        <form method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Basic Information Section -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-info-circle text-blue-600 mr-2"></i>Basic Information
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Job Title -->
                    <div class="md:col-span-2">
                        <label asp-for="Input.Title" class="block text-sm font-medium text-gray-700 mb-2">
                            Job Title <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.Title" type="text" placeholder="e.g. Senior Software Engineer"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <span asp-validation-for="Input.Title" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Location -->
                    <div>
                        <label asp-for="Input.Location" class="block text-sm font-medium text-gray-700 mb-2">
                            Location <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.Location" type="text" placeholder="e.g. New York, NY"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <span asp-validation-for="Input.Location" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Number of Openings -->
                    <div>
                        <label asp-for="Input.NumberOfOpenings" class="block text-sm font-medium text-gray-700 mb-2">
                            Number of Openings <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.NumberOfOpenings" type="number" min="1" max="999"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <span asp-validation-for="Input.NumberOfOpenings" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Job Type -->
                    <div>
                        <label asp-for="Input.Type" class="block text-sm font-medium text-gray-700 mb-2">
                            Job Type <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.Type" asp-items="Html.GetEnumSelectList<RESUMATE_FINAL_WORKING_MODEL.Models.JobType>()"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Select Job Type</option>
                        </select>
                        <span asp-validation-for="Input.Type" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Experience Level -->
                    <div>
                        <label asp-for="Input.ExperienceLevel" class="block text-sm font-medium text-gray-700 mb-2">
                            Experience Level <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.ExperienceLevel" asp-items="Html.GetEnumSelectList<RESUMATE_FINAL_WORKING_MODEL.Models.ExperienceLevel>()"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Select Experience Level</option>
                        </select>
                        <span asp-validation-for="Input.ExperienceLevel" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Category -->
                    <div>
                        <label asp-for="Input.Category" class="block text-sm font-medium text-gray-700 mb-2">
                            Job Category <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.Category" asp-items="Html.GetEnumSelectList<RESUMATE_FINAL_WORKING_MODEL.Models.JobCategory>()"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Select Category</option>
                        </select>
                        <span asp-validation-for="Input.Category" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Remote Work Options -->
                    <div class="md:col-span-2">
                        <div class="flex items-center mb-3">
                            <input asp-for="Input.RemoteWorkOption" type="checkbox" id="RemoteWorkOption"
                                   class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <label for="RemoteWorkOption" class="ml-2 text-sm font-medium text-gray-700">
                                Remote Work Available
                            </label>
                        </div>

                        <div id="remoteWorkTypeSection" class="hidden">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Remote Work Type</label>
                            <div class="flex space-x-4">
                                <label class="inline-flex items-center">
                                    <input asp-for="Input.RemoteWorkType" type="radio" value="Remote" class="form-radio">
                                    <span class="ml-2">Fully Remote</span>
                                </label>
                                <label class="inline-flex items-center">
                                    <input asp-for="Input.RemoteWorkType" type="radio" value="Hybrid" class="form-radio">
                                    <span class="ml-2">Hybrid</span>
                                </label>
                                <label class="inline-flex items-center">
                                    <input asp-for="Input.RemoteWorkType" type="radio" value="OnSite" class="form-radio">
                                    <span class="ml-2">On-Site</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Application Deadline -->
                    <div class="md:col-span-2">
                        <label asp-for="Input.ApplicationDeadline" class="block text-sm font-medium text-gray-700 mb-2">
                            Application Deadline
                        </label>
                        <input asp-for="Input.ApplicationDeadline" type="date"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <span asp-validation-for="Input.ApplicationDeadline" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Compensation Section -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-dollar-sign text-green-600 mr-2"></i>Compensation & Benefits
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Salary Range -->
                    <div>
                        <label asp-for="Input.SalaryMin" class="block text-sm font-medium text-gray-700 mb-2">
                            Minimum Salary (Annual)
                        </label>
                        <div class="relative">
                            <span class="absolute left-3 top-2 text-gray-500">$</span>
                            <input asp-for="Input.SalaryMin" type="number" step="1000" placeholder="50000"
                                   class="w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>
                        <span asp-validation-for="Input.SalaryMin" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Input.SalaryMax" class="block text-sm font-medium text-gray-700 mb-2">
                            Maximum Salary (Annual)
                        </label>
                        <div class="relative">
                            <span class="absolute left-3 top-2 text-gray-500">$</span>
                            <input asp-for="Input.SalaryMax" type="number" step="1000" placeholder="80000"
                                   class="w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>
                        <span asp-validation-for="Input.SalaryMax" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Hide Salary Option -->
                    <div class="md:col-span-2">
                        <div class="flex items-center">
                            <input asp-for="Input.HideSalary" type="checkbox" id="HideSalary"
                                   class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <label for="HideSalary" class="ml-2 text-sm text-gray-700">
                                Hide salary information on job posting
                            </label>
                        </div>
                    </div>

                    <!-- Benefits -->
                    <div class="md:col-span-2">
                        <label asp-for="Input.Benefits" class="block text-sm font-medium text-gray-700 mb-2">
                            Benefits & Perks
                        </label>
                        <textarea asp-for="Input.Benefits" rows="3" placeholder="e.g. Health insurance, 401(k), Flexible hours, Remote work, Professional development"
                                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                        <span asp-validation-for="Input.Benefits" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Job Description Section -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-file-alt text-purple-600 mr-2"></i>Job Description
                </h2>

                <div class="space-y-6">
                    <!-- Description (TinyMCE) -->
                    <div>
                        <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700 mb-2">
                            Job Description <span class="text-red-500">*</span>
                        </label>
                        <textarea asp-for="Input.Description" id="Description" rows="10"
                                  class="w-full px-4 py-2 border border-gray-300 rounded-lg"></textarea>
                        <span asp-validation-for="Input.Description" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Key Responsibilities -->
                    <div>
                        <label asp-for="Input.KeyResponsibilities" class="block text-sm font-medium text-gray-700 mb-2">
                            Key Responsibilities
                        </label>
                        <textarea asp-for="Input.KeyResponsibilities" rows="5" placeholder="Enter each responsibility on a new line"
                                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                        <span asp-validation-for="Input.KeyResponsibilities" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Preferred Qualifications -->
                    <div>
                        <label asp-for="Input.PreferredQualifications" class="block text-sm font-medium text-gray-700 mb-2">
                            Preferred Qualifications
                        </label>
                        <textarea asp-for="Input.PreferredQualifications" rows="4" placeholder="Additional qualifications that would be beneficial"
                                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                        <span asp-validation-for="Input.PreferredQualifications" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Required Skills Section -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-tools text-orange-600 mr-2"></i>Required Skills
                </h2>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Select Required Skills <span class="text-red-500">*</span>
                    </label>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-3 max-h-64 overflow-y-auto border border-gray-300 rounded-lg p-4">
                        @foreach (var skill in Model.SkillOptions)
                        {
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="Input.SelectedSkillIds" value="@skill.Value"
                                       class="form-checkbox h-4 w-4 text-blue-600 rounded">
                                <span class="ml-2 text-sm text-gray-700">@skill.Text</span>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="Input.SelectedSkillIds" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <!-- Publish Options -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-rocket text-indigo-600 mr-2"></i>Publish Options
                </h2>

                <div class="flex items-center">
                    <input asp-for="Input.PublishImmediately" type="checkbox" id="PublishImmediately" checked
                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                    <label for="PublishImmediately" class="ml-2 text-sm text-gray-700">
                        Publish job posting immediately (uncheck to save as draft)
                    </label>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4">
                <a href="/RecruiterDashboard" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-semibold">
                    <i class="fas fa-times mr-2"></i>Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold">
                    <i class="fas fa-save mr-2"></i>Create Job Posting
                </button>
            </div>
        </form>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12 py-6">
        <div class="max-w-7xl mx-auto px-4 text-center text-gray-600">
            <p>&copy; 2025 ResuMate. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Initialize TinyMCE for job description
        tinymce.init({
            selector: '#Description',
            height: 400,
            menubar: false,
            plugins: 'lists link code',
            toolbar: 'undo redo | formatselect | bold italic | bullist numlist | link | code',
            content_style: 'body { font-family: Arial, sans-serif; font-size: 14px; }',
            setup: function (editor) {
                editor.on('change', function () {
                    editor.save();
                });
            }
        });

        // Toggle remote work type options
        document.getElementById('RemoteWorkOption').addEventListener('change', function() {
            const remoteTypeSection = document.getElementById('remoteWorkTypeSection');
            if (this.checked) {
                remoteTypeSection.classList.remove('hidden');
            } else {
                remoteTypeSection.classList.add('hidden');
            }
        });

        // Set minimum date for application deadline to tomorrow
        const deadlineInput = document.querySelector('input[type="date"]');
        if (deadlineInput) {
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            deadlineInput.min = tomorrow.toISOString().split('T')[0];
        }
    </script>
</body>
</html>
