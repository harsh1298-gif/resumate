@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.Recruiter.Interviews.ScheduleModel
@{
    ViewData["Title"] = "Schedule Interview";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ResuMate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-md fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <a href="/RecruiterDashboard" class="text-2xl font-bold text-blue-600">
                    <i class="fas fa-briefcase mr-2"></i>ResuMate
                </a>
                <span class="ml-4 text-gray-600">| @Model.CurrentRecruiter?.Company?.Name</span>
            </div>
            <div class="flex items-center space-x-4">
                <a href="/RecruiterDashboard" class="text-gray-600 hover:text-blue-600 transition">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
                </a>
                <form method="post" action="/Logout" class="inline">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </button>
                </form>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-20">
        <!-- Page Title -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-calendar-plus text-pink-600 mr-2"></i>Schedule Interview
            </h1>
            <p class="text-gray-600 mt-2">Schedule an interview with a candidate</p>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
                <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                <i class="fas fa-exclamation-circle mr-2"></i>@TempData["Error"]
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                <i class="fas fa-exclamation-triangle mr-2"></i>Please fix the errors below:
                <ul class="list-disc list-inside mt-2">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Schedule Form -->
        <form method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Step 1: Select Candidate -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <span class="bg-pink-600 text-white w-8 h-8 rounded-full flex items-center justify-center mr-3">1</span>
                    Select Candidate
                </h2>

                <div>
                    <label asp-for="Input.ApplicationId" class="block text-sm font-medium text-gray-700 mb-2">
                        Candidate <span class="text-red-500">*</span>
                    </label>
                    @if (!Model.CandidateOptions.Any())
                    {
                        <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg">
                            <i class="fas fa-info-circle mr-2"></i>No eligible candidates found. Please shortlist candidates first.
                        </div>
                    }
                    else
                    {
                        <select asp-for="Input.ApplicationId" asp-items="Model.CandidateOptions"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                            <option value="">-- Select a candidate --</option>
                        </select>
                        <span asp-validation-for="Input.ApplicationId" class="text-red-500 text-sm"></span>
                    }
                </div>
            </div>

            <!-- Step 2: Interview Details -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <span class="bg-pink-600 text-white w-8 h-8 rounded-full flex items-center justify-center mr-3">2</span>
                    Interview Details
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Interview Type -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Interview Type <span class="text-red-500">*</span>
                        </label>
                        <div class="grid grid-cols-3 gap-3">
                            <label class="relative">
                                <input asp-for="Input.Type" type="radio" value="@InterviewType.Phone" class="peer sr-only">
                                <div class="border-2 border-gray-300 peer-checked:border-pink-600 peer-checked:bg-pink-50 rounded-lg p-4 text-center cursor-pointer hover:border-pink-400 transition">
                                    <i class="fas fa-phone text-2xl text-pink-600 mb-2"></i>
                                    <p class="font-semibold text-gray-900">Phone</p>
                                </div>
                            </label>
                            <label class="relative">
                                <input asp-for="Input.Type" type="radio" value="@InterviewType.Video" class="peer sr-only" checked>
                                <div class="border-2 border-gray-300 peer-checked:border-pink-600 peer-checked:bg-pink-50 rounded-lg p-4 text-center cursor-pointer hover:border-pink-400 transition">
                                    <i class="fas fa-video text-2xl text-pink-600 mb-2"></i>
                                    <p class="font-semibold text-gray-900">Video</p>
                                </div>
                            </label>
                            <label class="relative">
                                <input asp-for="Input.Type" type="radio" value="@InterviewType.InPerson" class="peer sr-only">
                                <div class="border-2 border-gray-300 peer-checked:border-pink-600 peer-checked:bg-pink-50 rounded-lg p-4 text-center cursor-pointer hover:border-pink-400 transition">
                                    <i class="fas fa-user-friends text-2xl text-pink-600 mb-2"></i>
                                    <p class="font-semibold text-gray-900">In-Person</p>
                                </div>
                            </label>
                        </div>
                        <span asp-validation-for="Input.Type" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Interview Round -->
                    <div>
                        <label asp-for="Input.Round" class="block text-sm font-medium text-gray-700 mb-2">
                            Interview Round <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.Round" asp-items="Html.GetEnumSelectList<InterviewRound>()"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                            <option value="">Select Round</option>
                        </select>
                        <span asp-validation-for="Input.Round" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Duration -->
                    <div>
                        <label asp-for="Input.DurationMinutes" class="block text-sm font-medium text-gray-700 mb-2">
                            Duration (minutes) <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.DurationMinutes"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                            <option value="30">30 minutes</option>
                            <option value="60" selected>1 hour</option>
                            <option value="90">1.5 hours</option>
                            <option value="120">2 hours</option>
                        </select>
                        <span asp-validation-for="Input.DurationMinutes" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Date -->
                    <div>
                        <label asp-for="Input.ScheduledDateTime" class="block text-sm font-medium text-gray-700 mb-2">
                            Date <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.ScheduledDateTime" type="date"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                        <span asp-validation-for="Input.ScheduledDateTime" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Time -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Time <span class="text-red-500">*</span>
                        </label>
                        <input type="time" id="interviewTime"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                    </div>

                    <!-- Meeting Link (for Video) -->
                    <div class="md:col-span-2" id="meetingLinkSection">
                        <label asp-for="Input.MeetingLink" class="block text-sm font-medium text-gray-700 mb-2">
                            Meeting Link
                        </label>
                        <input asp-for="Input.MeetingLink" type="url" placeholder="https://zoom.us/j/..."
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                        <p class="text-xs text-gray-500 mt-1">For video interviews: Zoom, Teams, Google Meet, etc.</p>
                        <span asp-validation-for="Input.MeetingLink" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Location (for In-Person) -->
                    <div class="md:col-span-2 hidden" id="locationSection">
                        <label asp-for="Input.Location" class="block text-sm font-medium text-gray-700 mb-2">
                            Location
                        </label>
                        <input asp-for="Input.Location" type="text" placeholder="Office address or meeting room"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent">
                        <span asp-validation-for="Input.Location" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Special Instructions -->
                    <div class="md:col-span-2">
                        <label asp-for="Input.SpecialInstructions" class="block text-sm font-medium text-gray-700 mb-2">
                            Special Instructions for Candidate
                        </label>
                        <textarea asp-for="Input.SpecialInstructions" rows="4" placeholder="Any preparation needed, documents to bring, etc."
                                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent"></textarea>
                        <span asp-validation-for="Input.SpecialInstructions" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- What Will Happen -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-blue-900 mb-3 flex items-center">
                    <i class="fas fa-info-circle mr-2"></i>What Happens Next
                </h3>
                <ul class="space-y-2 text-sm text-blue-800">
                    <li><i class="fas fa-check text-green-600 mr-2"></i>Interview will be scheduled in the system</li>
                    <li><i class="fas fa-check text-green-600 mr-2"></i>Candidate will receive an email notification</li>
                    <li><i class="fas fa-check text-green-600 mr-2"></i>Calendar invitation (.ics file) will be included</li>
                    <li><i class="fas fa-check text-green-600 mr-2"></i>Application status will be updated to "Interview Scheduled"</li>
                    <li><i class="fas fa-check text-green-600 mr-2"></i>You can manage the interview from the Interviews page</li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4">
                <a href="/RecruiterDashboard" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-semibold">
                    <i class="fas fa-times mr-2"></i>Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition font-semibold">
                    <i class="fas fa-calendar-check mr-2"></i>Schedule Interview
                </button>
            </div>
        </form>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12 py-6">
        <div class="max-w-7xl mx-auto px-4 text-center text-gray-600">
            <p>&copy; 2025 ResuMate. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Set minimum date to tomorrow
        const dateInput = document.querySelector('input[type="date"]');
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        dateInput.min = tomorrow.toISOString().split('T')[0];

        // Combine date and time
        const timeInput = document.getElementById('interviewTime');
        timeInput.value = '10:00'; // Default to 10 AM

        timeInput.addEventListener('change', updateDateTime);
        dateInput.addEventListener('change', updateDateTime);

        function updateDateTime() {
            const date = dateInput.value;
            const time = timeInput.value;
            if (date && time) {
                const dateTimeInput = document.querySelector('input[name="Input.ScheduledDateTime"]');
                dateTimeInput.value = `${date}T${time}`;
            }
        }

        // Show/hide meeting link or location based on interview type
        const typeRadios = document.querySelectorAll('input[name="Input.Type"]');
        const meetingLinkSection = document.getElementById('meetingLinkSection');
        const locationSection = document.getElementById('locationSection');

        typeRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.value === 'Video') {
                    meetingLinkSection.classList.remove('hidden');
                    locationSection.classList.add('hidden');
                } else if (this.value === 'InPerson') {
                    meetingLinkSection.classList.add('hidden');
                    locationSection.classList.remove('hidden');
                } else {
                    meetingLinkSection.classList.add('hidden');
                    locationSection.classList.add('hidden');
                }
            });
        });

        // Initialize based on selected type
        const selectedType = document.querySelector('input[name="Input.Type"]:checked');
        if (selectedType) {
            selectedType.dispatchEvent(new Event('change'));
        }
    </script>
</body>
</html>
