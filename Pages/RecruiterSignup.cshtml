@page
@model ResumeProject.Pages.RecruiterSignupModel
@{
    Layout = null;
    ViewData["Title"] = "Employer Registration";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResuMate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-gradient-to-r from-gray-100 via-gray-200 to-gray-100 min-h-screen flex items-center justify-center p-4">

    <div class="bg-white shadow-lg rounded-xl max-w-7xl w-full flex overflow-hidden">
        <!-- Left Side: Gradient Background -->
        <div class="hidden lg:flex w-1/2 bg-cover bg-center p-16 flex-col justify-center text-white"
             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="bg-black bg-opacity-20 p-6 rounded-md max-w-md">
                <h2 class="text-4xl font-bold mb-6">Join ResuMate</h2>
                <p class="text-lg mb-8">
                    Connect with top talent and grow your company with our powerful hiring platform.
                </p>
            </div>
        </div>

        <!-- Right Side: Signup Form with Light Gray Background -->
        <div class="w-full lg:w-1/2 p-8 bg-gray-50 rounded-r-xl">
            <div class="max-w-md mx-auto">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-gray-800">Create Your Employer Account</h1>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-md mb-4 text-sm"></div>

                <form method="post" enctype="multipart/form-data" class="space-y-6">
                    <!-- Company Section -->
                    <div>
                        <h2 class="text-lg font-semibold text-gray-700 border-b pb-2 mb-4 flex items-center">
                            <i class="fas fa-building mr-2"></i>Company Information
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label asp-for="Input.CompanyName"></label>
                                <input asp-for="Input.CompanyName" class="mt-1 w-full p-2 border border-gray-300 rounded-md" />
                                <span asp-validation-for="Input.CompanyName" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.CompanyWebsite"></label>
                                <input asp-for="Input.CompanyWebsite" class="mt-1 w-full p-2 border border-gray-300 rounded-md" />
                                <span asp-validation-for="Input.CompanyWebsite" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.Industry"></label>
                                <select asp-for="Input.Industry" asp-items="Model.IndustryList" class="mt-1 w-full p-2 border border-gray-300 rounded-md">
                                    <option value="">Select...</option>
                                </select>
                                <span asp-validation-for="Input.Industry" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.CompanySize"></label>
                                <select asp-for="Input.CompanySize" asp-items="Model.CompanySizeList" class="mt-1 w-full p-2 border border-gray-300 rounded-md">
                                    <option value="">Select...</option>
                                </select>
                                <span asp-validation-for="Input.CompanySize" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.CompanyLogo"></label>
                                <input asp-for="Input.CompanyLogo" type="file" class="mt-1 w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0" />
                                <span asp-validation-for="Input.CompanyLogo" class="text-red-600 text-xs"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Your Details Section -->
                    <div>
                        <h2 class="text-lg font-semibold text-gray-700 border-b pb-2 mb-4 flex items-center">
                            <i class="fas fa-user-tie mr-2"></i>Your Details
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label asp-for="Input.FullName"></label>
                                <input asp-for="Input.FullName" class="mt-1 w-full p-2 border border-gray-300 rounded-md" />
                                <span asp-validation-for="Input.FullName" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.JobTitle"></label>
                                <input asp-for="Input.JobTitle" class="mt-1 w-full p-2 border border-gray-300 rounded-md" />
                                <span asp-validation-for="Input.JobTitle" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="mt-1 w-full p-2 border border-gray-300 rounded-md" />
                                <span asp-validation-for="Input.Email" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" type="password" class="mt-1 w-full p-2 border border-gray-300 rounded-md" />
                                <span asp-validation-for="Input.Password" class="text-red-600 text-xs"></span>
                            </div>
                        </div>
                    </div>

                    <div class="pt-4 text-center">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg">Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
