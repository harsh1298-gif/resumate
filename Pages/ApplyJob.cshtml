@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.ApplyJobModel
@{
    ViewData["Title"] = "Apply for Job";
}

<div class="min-h-screen bg-gray-50">
    <!-- Breadcrumb -->
    <div class="bg-white border-b">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <nav class="flex text-sm">
                <a asp-page="/Dashboard" class="text-blue-600 hover:text-blue-800">Dashboard</a>
                <span class="mx-2 text-gray-400">/</span>
                <a asp-page="/BrowseJobs" class="text-blue-600 hover:text-blue-800">Browse Jobs</a>
                <span class="mx-2 text-gray-400">/</span>
                <a asp-page="/JobDetails" asp-route-id="@Model.Job.Id" class="text-blue-600 hover:text-blue-800">@Model.Job.Title</a>
                <span class="mx-2 text-gray-400">/</span>
                <span class="text-gray-600">Apply</span>
            </nav>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Submit Your Application</h1>
            <p class="text-gray-600">Review your information and apply for this position</p>
        </div>

        <form method="post" class="space-y-6">
            <!-- Job Summary Card -->
            <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-600">
                <div class="flex items-center space-x-4 mb-4">
                    <img src="@Model.Job.CompanyLogo" alt="@Model.Job.CompanyName"
                         class="w-16 h-16 rounded-lg object-cover">
                    <div class="flex-1">
                        <h2 class="text-2xl font-bold text-gray-900">@Model.Job.Title</h2>
                        <p class="text-lg text-gray-700">@Model.Job.CompanyName</p>
                    </div>
                </div>
                <div class="flex flex-wrap gap-3">
                    <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                        <i class="fas fa-map-marker-alt mr-1"></i>@Model.Job.Location
                    </span>
                    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                        <i class="fas fa-briefcase mr-1"></i>@Model.Job.Type
                    </span>
                    @if (Model.Job.Salary.HasValue)
                    {
                        <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm">
                            <i class="fas fa-rupee-sign mr-1"></i>@Model.GetFormattedSalary(Model.Job.Salary)
                        </span>
                    }
                </div>
            </div>

            <!-- Your Profile Summary -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-user-circle text-blue-600 mr-2"></i>
                    Your Profile Summary
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- Left Column -->
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Full Name</p>
                                <p class="font-semibold text-gray-900">@Model.Applicant.FullName</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-envelope text-green-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Email</p>
                                <p class="font-semibold text-gray-900 break-all">@Model.Applicant.Email</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-phone text-purple-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Phone</p>
                                <p class="font-semibold text-gray-900">@Model.Applicant.PhoneNumber</p>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-briefcase text-orange-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Experience</p>
                                <p class="font-semibold text-gray-900">@Model.Applicant.TotalExperience years</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-pink-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-tools text-pink-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Skills</p>
                                <p class="font-semibold text-gray-900">@Model.Applicant.SkillsCount skills</p>
                            </div>
                        </div>

                        @if (Model.Applicant.HasResume)
                        {
                            <div class="flex items-start">
                                <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-file-pdf text-yellow-600"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-gray-500">Resume</p>
                                    <a href="@Model.Applicant.ResumeFilePath" target="_blank"
                                       class="font-semibold text-blue-600 hover:text-blue-800 hover:underline">
                                        @Model.Applicant.ResumeFileName <i class="fas fa-external-link-alt text-xs ml-1"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="flex items-start">
                                <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-exclamation-triangle text-red-600"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-red-600">No resume uploaded</p>
                                    <a asp-page="/EditProfile" class="text-sm text-blue-600 hover:underline">
                                        Upload Resume
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Profile Completion Warning -->
                @if (!Model.Applicant.IsProfileComplete)
                {
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <div class="flex items-start">
                            <i class="fas fa-exclamation-triangle text-yellow-600 text-xl mt-1 mr-3"></i>
                            <div class="flex-1">
                                <h4 class="font-semibold text-yellow-800 mb-1">Incomplete Profile</h4>
                                <p class="text-sm text-yellow-700 mb-3">
                                    Your profile is not complete. Completing your profile increases your chances of getting hired.
                                </p>
                                <a asp-page="/EditProfile"
                                   class="inline-flex items-center px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors text-sm font-medium">
                                    <i class="fas fa-edit mr-2"></i>Complete Profile
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Cover Letter (Optional) -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-file-alt text-green-600 mr-2"></i>
                    Cover Letter <span class="text-sm text-gray-500 font-normal ml-2">(Optional)</span>
                </h3>

                <div class="mb-4">
                    <textarea asp-for="Input.CoverLetter" rows="8"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                              placeholder="Tell the employer why you're a great fit for this position..."></textarea>
                    <span asp-validation-for="Input.CoverLetter" class="text-red-600 text-sm"></span>
                </div>

                <p class="text-sm text-gray-600">
                    <i class="fas fa-lightbulb text-yellow-500 mr-1"></i>
                    <strong>Tip:</strong> A well-written cover letter can significantly improve your chances.
                    Highlight your relevant experience and explain why you're interested in this role.
                </p>
            </div>

            <!-- Confirmation -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-start space-x-3">
                    <input type="checkbox" asp-for="Input.ConfirmAccuracy"
                           class="mt-1 w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                    <div class="flex-1">
                        <label asp-for="Input.ConfirmAccuracy" class="font-medium text-gray-900 cursor-pointer">
                            I confirm that all the information provided in my profile is accurate and up to date
                        </label>
                        <span asp-validation-for="Input.ConfirmAccuracy" class="block text-red-600 text-sm mt-1"></span>
                    </div>
                </div>
            </div>

            <!-- Hidden Field -->
            <input type="hidden" asp-for="Input.JobId" />

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-end">
                <a asp-page="/JobDetails" asp-route-id="@Model.Job.Id"
                   class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors text-center font-medium">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Job Details
                </a>
                <button type="submit"
                        class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold text-lg">
                    <i class="fas fa-paper-plane mr-2"></i>Submit Application
                </button>
            </div>
        </form>

        <!-- Additional Info -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
            <h4 class="font-semibold text-blue-900 mb-2 flex items-center">
                <i class="fas fa-info-circle mr-2"></i>What happens next?
            </h4>
            <ul class="space-y-2 text-sm text-blue-800">
                <li class="flex items-start">
                    <i class="fas fa-check text-blue-600 mt-1 mr-2"></i>
                    <span>Your application will be reviewed by the hiring team</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-blue-600 mt-1 mr-2"></i>
                    <span>You'll receive updates via email about your application status</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-blue-600 mt-1 mr-2"></i>
                    <span>You can track your application status in "My Applications"</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-blue-600 mt-1 mr-2"></i>
                    <span>If shortlisted, the recruiter will contact you directly</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
