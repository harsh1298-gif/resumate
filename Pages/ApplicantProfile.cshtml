@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.ApplicantProfileModel
@{
    ViewData["Title"] = "Profile Management";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-green-400 text-lg"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-green-800 font-medium">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            </div>
        }

        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-circle text-red-400 text-lg"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-red-800 font-medium">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
        }

        <!-- Warning Message -->
        @if (TempData["WarningMessage"] != null)
        {
            <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle text-yellow-400 text-lg"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-yellow-800 font-medium">@TempData["WarningMessage"]</p>
                    </div>
                </div>
            </div>
        }

        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-white">Profile Management</h1>
                        <p class="text-blue-100 mt-2">Update all your personal and professional information</p>
                    </div>
                    <div class="bg-white bg-opacity-20 rounded-full p-3">
                        <i class="fas fa-user-edit text-white text-2xl"></i>
                    </div>
                </div>
            </div>

            <form method="post" enctype="multipart/form-data" class="p-8 space-y-8">
                <input type="hidden" asp-for="Applicant.Id" />
                <input type="hidden" asp-for="Applicant.UserId" />
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700"></div>

                <!-- Profile Photo Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-camera text-blue-500 mr-3"></i>
                        Profile Photo
                    </h2>
                    <div class="flex items-center space-x-6">
                        @if (!string.IsNullOrEmpty(Model.Applicant?.ProfilePhotoPath))
                        {
                            <img src="@Model.Applicant.ProfilePhotoPath" alt="Profile Photo" class="w-24 h-24 rounded-full object-cover border-4 border-blue-500" />
                        }
                        else
                        {
                            <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center">
                                <i class="fas fa-user text-gray-400 text-3xl"></i>
                            </div>
                        }
                        <div class="flex-1">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Upload New Photo</label>
                            <input type="file" name="ProfilePhoto" accept=".jpg,.jpeg,.png,.gif" 
                                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
                            <p class="mt-2 text-xs text-gray-500">JPG, PNG, or GIF (max 5MB)</p>
                        </div>
                    </div>
                </div>

                <!-- Personal Information Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-user-circle text-blue-500 mr-3"></i>
                        Personal Information
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Full Name -->
                        <div>
                            <label asp-for="Applicant.FullName" class="block text-sm font-medium text-gray-700 mb-2">
                                Full Name <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="Applicant.FullName" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                   placeholder="Enter your full name" required />
                            <span asp-validation-for="Applicant.FullName" class="text-red-600 text-sm mt-1 block"></span>
                        </div>

                        <!-- Email -->
                        <div>
                            <label asp-for="Applicant.Email" class="block text-sm font-medium text-gray-700 mb-2">
                                Email Address <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="Applicant.Email" type="email" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                   placeholder="your.email@example.com" required />
                            <span asp-validation-for="Applicant.Email" class="text-red-600 text-sm mt-1 block"></span>
                        </div>

                        <!-- Phone Number -->
                        <div>
                            <label asp-for="Applicant.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                                Phone Number <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="Applicant.PhoneNumber" type="tel" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                   placeholder="+1 (555) 123-4567" required />
                            <span asp-validation-for="Applicant.PhoneNumber" class="text-red-600 text-sm mt-1 block"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div>
                            <label asp-for="Applicant.DateOfBirth" class="block text-sm font-medium text-gray-700 mb-2">
                                Date of Birth <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="Applicant.DateOfBirth" type="date" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                   required />
                            <span asp-validation-for="Applicant.DateOfBirth" class="text-red-600 text-sm mt-1 block"></span>
                        </div>
                    </div>
                </div>

                <!-- Address Information Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-map-marker-alt text-green-500 mr-3"></i>
                        Address Information
                    </h2>

                    <div class="space-y-6">
                        <!-- Street Address -->
                        <div>
                            <label asp-for="Applicant.Address" class="block text-sm font-medium text-gray-700 mb-2">
                                Street Address
                            </label>
                            <input asp-for="Applicant.Address" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                   placeholder="123 Main Street, Apt 4B" />
                            <span asp-validation-for="Applicant.Address" class="text-red-600 text-sm mt-1 block"></span>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- City -->
                            <div>
                                <label asp-for="Applicant.City" class="block text-sm font-medium text-gray-700 mb-2">
                                    City
                                </label>
                                <input asp-for="Applicant.City" 
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                       placeholder="New York" />
                                <span asp-validation-for="Applicant.City" class="text-red-600 text-sm mt-1 block"></span>
                            </div>

                            <!-- Pincode -->
                            <div>
                                <label asp-for="Applicant.Pincode" class="block text-sm font-medium text-gray-700 mb-2">
                                    Pincode / ZIP Code
                                </label>
                                <input asp-for="Applicant.Pincode" 
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                       placeholder="10001" />
                                <span asp-validation-for="Applicant.Pincode" class="text-red-600 text-sm mt-1 block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Professional Information Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-briefcase text-purple-500 mr-3"></i>
                        Professional Information
                    </h2>

                    <div class="space-y-6">
                        <!-- Professional Summary -->
                        <div>
                            <label asp-for="Applicant.ProfessionalSummary" class="block text-sm font-medium text-gray-700 mb-2">
                                Professional Summary
                                <span class="text-gray-400 text-xs ml-2">(Brief overview of your professional background)</span>
                            </label>
                            <textarea asp-for="Applicant.ProfessionalSummary" rows="5" 
                                      class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                      placeholder="Describe your professional experience, skills, and career highlights..."></textarea>
                            <span asp-validation-for="Applicant.ProfessionalSummary" class="text-red-600 text-sm mt-1 block"></span>
                            <p class="mt-2 text-xs text-gray-500">Maximum 1000 characters</p>
                        </div>

                        <!-- Career Objective -->
                        <div>
                            <label asp-for="Applicant.Objective" class="block text-sm font-medium text-gray-700 mb-2">
                                Career Objective
                                <span class="text-gray-400 text-xs ml-2">(Your career goals and aspirations)</span>
                            </label>
                            <textarea asp-for="Applicant.Objective" rows="4" 
                                      class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" 
                                      placeholder="What are your career goals and what type of opportunities are you seeking?..."></textarea>
                            <span asp-validation-for="Applicant.Objective" class="text-red-600 text-sm mt-1 block"></span>
                            <p class="mt-2 text-xs text-gray-500">Maximum 500 characters</p>
                        </div>
                    </div>
                </div>

                <!-- Resume Upload Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-file-alt text-orange-500 mr-3"></i>
                        Resume / CV
                    </h2>

                    <div class="space-y-4">
                        @if (!string.IsNullOrEmpty(Model.Applicant?.ResumeFileName))
                        {
                            <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                                <i class="fas fa-file-pdf text-red-500 text-2xl"></i>
                                <div class="flex-1">
                                    <p class="font-medium text-gray-900">@Model.Applicant.ResumeFileName</p>
                                    <p class="text-sm text-gray-500">
                                        Uploaded on @Model.Applicant.ResumeUploadDate?.ToString("MMM dd, yyyy")
                                    </p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Applicant.ResumeFilePath))
                                {
                                    <a href="@Model.Applicant.ResumeFilePath" target="_blank" 
                                       class="text-blue-600 hover:text-blue-800 font-medium">
                                        <i class="fas fa-download mr-1"></i> Download
                                    </a>
                                }
                            </div>
                        }

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Upload New Resume
                            </label>
                            <input type="file" name="ResumeFile" accept=".pdf,.doc,.docx" 
                                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-3 file:px-6 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" />
                            <p class="mt-2 text-xs text-gray-500">PDF, DOC, or DOCX (max 10MB)</p>
                        </div>
                    </div>
                </div>

                <!-- Profile Status Information (Read-only) -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-blue-900 mb-4 flex items-center">
                        <i class="fas fa-info-circle text-blue-600 mr-2"></i>
                        Profile Status
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                        <div>
                            <p class="text-gray-600">Profile Complete</p>
                            <p class="font-semibold text-gray-900">
                                @(Model.Applicant?.IsProfileComplete == true ? "Yes" : "No")
                            </p>
                        </div>
                        <div>
                            <p class="text-gray-600">Email Verified</p>
                            <p class="font-semibold text-gray-900">
                                @(Model.Applicant?.IsEmailVerified == true ? "Yes" : "No")
                            </p>
                        </div>
                        <div>
                            <p class="text-gray-600">Account Status</p>
                            <p class="font-semibold text-gray-900">
                                @(Model.Applicant?.IsActive == true ? "Active" : "Inactive")
                            </p>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-blue-200">
                        <p class="text-xs text-gray-600">
                            <i class="fas fa-clock mr-1"></i>
                            Last Updated: @Model.Applicant?.UpdatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                        </p>
                        <p class="text-xs text-gray-600 mt-1">
                            <i class="fas fa-calendar mr-1"></i>
                            Member Since: @Model.Applicant?.CreatedAt.ToString("MMM dd, yyyy")
                        </p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-4 pt-6 border-t border-gray-200">
                    <a href="/Dashboard" 
                       class="inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Dashboard
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-blue-800 transition duration-200 shadow-lg">
                        <i class="fas fa-save mr-2"></i>
                        Save All Changes
                    </button>
                </div>
            </form>
        </div>

        <!-- Help Section -->
        <div class="mt-6 bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                <i class="fas fa-question-circle text-blue-500 mr-2"></i>
                Need Help?
            </h3>
            <p class="text-gray-600 text-sm mb-3">
                Keep your profile up-to-date to increase your chances of getting noticed by recruiters.
            </p>
            <ul class="text-sm text-gray-600 space-y-2">
                <li><i class="fas fa-check text-green-500 mr-2"></i> Complete all required fields marked with <span class="text-red-500">*</span></li>
                <li><i class="fas fa-check text-green-500 mr-2"></i> Upload a professional profile photo</li>
                <li><i class="fas fa-check text-green-500 mr-2"></i> Keep your resume updated</li>
                <li><i class="fas fa-check text-green-500 mr-2"></i> Write a compelling professional summary</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add interactive features
        document.addEventListener('DOMContentLoaded', function() {
            // Add focus effects
            const inputs = document.querySelectorAll('input:not([type="file"]), textarea');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('ring-2', 'ring-blue-200');
                });
                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('ring-2', 'ring-blue-200');
                });
            });

            // File upload preview
            const photoInput = document.querySelector('input[name="ProfilePhoto"]');
            if (photoInput) {
                photoInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const img = document.querySelector('img[alt="Profile Photo"]');
                            if (img) {
                                img.src = e.target.result;
                            }
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            // Character counter for textareas
            const textareas = document.querySelectorAll('textarea');
            textareas.forEach(textarea => {
                const maxLength = textarea.getAttribute('asp-for')?.includes('ProfessionalSummary') ? 1000 : 500;
                textarea.addEventListener('input', function() {
                    const remaining = maxLength - this.value.length;
                    const parent = this.parentElement;
                    let counter = parent.querySelector('.char-counter');
                    if (!counter) {
                        counter = document.createElement('p');
                        counter.className = 'char-counter text-xs text-gray-500 mt-1';
                        parent.appendChild(counter);
                    }
                    counter.textContent = `${this.value.length} / ${maxLength} characters`;
                    if (remaining < 0) {
                        counter.classList.add('text-red-500');
                    } else {
                        counter.classList.remove('text-red-500');
                    }
                });
            });

            // Form validation before submit
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                console.log('Form submission started');
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.classList.add('border-red-500');
                        console.log('Missing required field:', field.name);
                    } else {
                        field.classList.remove('border-red-500');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields marked with *');
                    console.log('Form validation failed');
                } else {
                    console.log('Form validation passed, submitting...');
                }
            });
        });
    </script>
}
