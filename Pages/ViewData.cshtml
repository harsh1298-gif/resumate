@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.ViewDataModel
@{
    ViewData["Title"] = "View Database Data";
}

<h1>Database Contents</h1>

@if (Model.HasData)
{
    <h2>Applicants</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var applicant in Model.Applicants)
            {
                <tr>
                    <td>@applicant.Id</td>
                    <td>@applicant.FullName</td>
                    <td>@applicant.Email</td>
                    <td>@applicant.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No data found in the database.</div>
}
