@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.BrowseJobsModel
@{
    ViewData["Title"] = "Browse Jobs";
}

<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
            <h1 class="text-3xl sm:text-4xl font-bold mb-2">Find Your Dream Job</h1>
            <p class="text-blue-100 text-base sm:text-lg">@Model.TotalJobs active job openings waiting for you</p>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-6">
        <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6">
            <form method="get" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Search Term -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-search text-gray-400"></i> Search Jobs
                        </label>
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm"
                               placeholder="Job title, keywords, or company"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <!-- Location -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-map-marker-alt text-gray-400"></i> Location
                        </label>
                        <input type="text" name="Location" value="@Model.Location"
                               placeholder="City or remote"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <!-- Min Salary -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-rupee-sign text-gray-400"></i> Minimum Salary
                        </label>
                        <input type="number" name="MinSalary" value="@Model.MinSalary"
                               placeholder="e.g., 500000"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                </div>

                <!-- Advanced Filters -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <!-- Job Type -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Job Type</label>
                        <select name="JobType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            <option value="">All Types</option>
                            @foreach (var type in Model.JobTypes)
                            {
                                <option value="@type" selected="@(Model.JobType == type)">@type</option>
                            }
                        </select>
                    </div>

                    <!-- Category -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                        <select name="Category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            <option value="">All Categories</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category" selected="@(Model.Category == category)">@category</option>
                            }
                        </select>
                    </div>

                    <!-- Experience Level -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Experience Level</label>
                        <select name="ExperienceLevel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            <option value="">All Levels</option>
                            @foreach (var level in Model.ExperienceLevels)
                            {
                                <option value="@level" selected="@(Model.ExperienceLevel == level)">@level</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 justify-end">
                    <a asp-page="/BrowseJobs" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors text-center">
                        Clear Filters
                    </a>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        <i class="fas fa-search mr-2"></i>Search Jobs
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Job Listings -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @if (Model.Jobs.Any())
        {
            <!-- Results Info -->
            <div class="mb-6 flex justify-between items-center">
                <p class="text-gray-600">
                    Showing <span class="font-semibold">@((Model.PageNumber - 1) * Model.PageSize + 1)</span> -
                    <span class="font-semibold">@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalJobs)</span>
                    of <span class="font-semibold">@Model.TotalJobs</span> jobs
                </p>
            </div>

            <!-- Job Cards Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var job in Model.Jobs)
                {
                    <div class="bg-white rounded-lg shadow hover:shadow-xl transition-shadow p-6 border border-gray-200">
                        <!-- Company Logo & Name -->
                        <div class="flex items-center mb-4">
                            <img src="@job.CompanyLogo" alt="@job.CompanyName" class="w-12 h-12 rounded-lg object-cover mr-3">
                            <div>
                                <h3 class="font-semibold text-gray-900">@job.CompanyName</h3>
                                <p class="text-sm text-gray-500">@job.Location</p>
                            </div>
                        </div>

                        <!-- Job Title -->
                        <h2 class="text-xl font-bold text-gray-900 mb-2">@job.Title</h2>

                        <!-- Job Details -->
                        <div class="flex flex-wrap gap-2 mb-4">
                            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium">
                                @job.Type
                            </span>
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                                @job.ExperienceLevel
                            </span>
                            <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-medium">
                                @job.Category
                            </span>
                        </div>

                        <!-- Description -->
                        <p class="text-gray-600 text-sm mb-4 line-clamp-3">@job.Description</p>

                        <!-- Salary -->
                        @if (job.Salary.HasValue)
                        {
                            <p class="text-lg font-bold text-gray-900 mb-4">
                                @Model.GetFormattedSalary(job.Salary)
                            </p>
                        }

                        <!-- Footer -->
                        <div class="border-t pt-4 flex justify-between items-center">
                            <div class="text-xs text-gray-500">
                                <p>@Model.GetRelativeTime(job.PostedDate)</p>
                                <p>@job.ApplicationCount applicants</p>
                            </div>

                            @if (job.HasApplied)
                            {
                                <span class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg text-sm font-medium">
                                    <i class="fas fa-check mr-1"></i>Applied
                                </span>
                            }
                            else
                            {
                                <a asp-page="/JobDetails" asp-route-id="@job.Id"
                                   class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                                    View Details
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="mt-8 flex justify-center">
                    <nav class="flex items-center space-x-2">
                        @if (Model.HasPreviousPage)
                        {
                            <a asp-page="/BrowseJobs"
                               asp-route-pageNumber="@(Model.PageNumber - 1)"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-location="@Model.Location"
                               asp-route-jobType="@Model.JobType"
                               asp-route-category="@Model.Category"
                               asp-route-experienceLevel="@Model.ExperienceLevel"
                               asp-route-minSalary="@Model.MinSalary"
                               class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                Previous
                            </a>
                        }

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <a asp-page="/BrowseJobs"
                               asp-route-pageNumber="@i"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-location="@Model.Location"
                               asp-route-jobType="@Model.JobType"
                               asp-route-category="@Model.Category"
                               asp-route-experienceLevel="@Model.ExperienceLevel"
                               asp-route-minSalary="@Model.MinSalary"
                               class="px-4 py-2 border rounded-lg @(i == Model.PageNumber ? "bg-blue-600 text-white" : "border-gray-300 hover:bg-gray-50")">
                                @i
                            </a>
                        }

                        @if (Model.HasNextPage)
                        {
                            <a asp-page="/BrowseJobs"
                               asp-route-pageNumber="@(Model.PageNumber + 1)"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-location="@Model.Location"
                               asp-route-jobType="@Model.JobType"
                               asp-route-category="@Model.Category"
                               asp-route-experienceLevel="@Model.ExperienceLevel"
                               asp-route-minSalary="@Model.MinSalary"
                               class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                Next
                            </a>
                        }
                    </nav>
                </div>
            }
        }
        else
        {
            <!-- No Results -->
            <div class="text-center py-16">
                <i class="fas fa-briefcase text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-2xl font-bold text-gray-900 mb-2">No Jobs Found</h3>
                <p class="text-gray-600 mb-6">Try adjusting your search filters to find more opportunities.</p>
                <a asp-page="/BrowseJobs" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Clear All Filters
                </a>
            </div>
        }
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
