@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.JobDetailsModel
@{
    ViewData["Title"] = Model.Job.Title;
}

<div class="min-h-screen bg-gray-50">
    <!-- Breadcrumb -->
    <div class="bg-white border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <nav class="flex text-sm">
                <a asp-page="/Dashboard" class="text-blue-600 hover:text-blue-800">Dashboard</a>
                <span class="mx-2 text-gray-400">/</span>
                <a asp-page="/BrowseJobs" class="text-blue-600 hover:text-blue-800">Browse Jobs</a>
                <span class="mx-2 text-gray-400">/</span>
                <span class="text-gray-600">@Model.Job.Title</span>
            </nav>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Job Header -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-start space-x-4">
                            <img src="@Model.Job.CompanyLogo" alt="@Model.Job.CompanyName"
                                 class="w-16 h-16 rounded-lg object-cover">
                            <div>
                                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Model.Job.Title</h1>
                                <p class="text-lg text-gray-700">@Model.Job.CompanyName</p>
                                <p class="text-gray-500">
                                    <i class="fas fa-map-marker-alt mr-1"></i>@Model.Job.Location
                                </p>
                            </div>
                        </div>

                        @if (Model.Job.MatchPercentage > 0)
                        {
                            <div class="text-center">
                                <div class="text-3xl font-bold text-green-600">@Model.Job.MatchPercentage%</div>
                                <div class="text-xs text-gray-500">Match</div>
                            </div>
                        }
                    </div>

                    <!-- Job Meta -->
                    <div class="flex flex-wrap gap-3 mb-6">
                        <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                            <i class="fas fa-briefcase mr-1"></i>@Model.Job.Type
                        </span>
                        <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                            <i class="fas fa-chart-line mr-1"></i>@Model.Job.ExperienceLevel
                        </span>
                        <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-medium">
                            <i class="fas fa-layer-group mr-1"></i>@Model.Job.Category
                        </span>
                        <span class="px-4 py-2 bg-orange-100 text-orange-800 rounded-full text-sm font-medium">
                            <i class="fas fa-users mr-1"></i>@Model.Job.ApplicationCount applicants
                        </span>
                    </div>

                    <!-- Salary -->
                    @if (Model.Job.Salary.HasValue)
                    {
                        <div class="mb-6">
                            <p class="text-2xl font-bold text-gray-900">
                                @Model.GetFormattedSalary(Model.Job.Salary)
                            </p>
                        </div>
                    }

                    <!-- Apply Button -->
                    <div class="border-t pt-6">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                                <p class="text-yellow-800">
                                    <i class="fas fa-exclamation-triangle mr-2"></i>@Model.ErrorMessage
                                </p>
                            </div>
                        }

                        @if (Model.HasApplied)
                        {
                            <div class="flex items-center justify-between p-4 bg-green-50 border border-green-200 rounded-lg">
                                <div>
                                    <p class="font-semibold text-green-800">
                                        <i class="fas fa-check-circle mr-2"></i>You have already applied for this job
                                    </p>
                                    <p class="text-sm text-green-600">Check your application status in My Applications</p>
                                </div>
                                <a asp-page="/MyApplications" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                                    View Application
                                </a>
                            </div>
                        }
                        else if (Model.CanApply)
                        {
                            <a asp-page="/ApplyJob" asp-route-jobId="@Model.Job.Id"
                               class="block w-full sm:w-auto text-center px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-lg font-semibold">
                                <i class="fas fa-paper-plane mr-2"></i>Apply Now
                            </a>
                        }
                        else
                        {
                            <button disabled class="block w-full sm:w-auto text-center px-8 py-3 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed text-lg font-semibold">
                                <i class="fas fa-ban mr-2"></i>Application Closed
                            </button>
                        }
                    </div>
                </div>

                <!-- Job Description -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">
                        <i class="fas fa-file-alt text-blue-600 mr-2"></i>Job Description
                    </h2>
                    <div class="prose max-w-none text-gray-700 whitespace-pre-line">
                        @Model.Job.Description
                    </div>
                </div>

                <!-- Required Skills -->
                @if (Model.Job.RequiredSkills.Any())
                {
                    <div class="bg-white rounded-lg shadow p-6">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">
                            <i class="fas fa-tools text-purple-600 mr-2"></i>Required Skills
                        </h2>
                        <div class="flex flex-wrap gap-3">
                            @foreach (var skill in Model.Job.RequiredSkills)
                            {
                                <span class="px-4 py-2 bg-gradient-to-r from-blue-100 to-purple-100 text-blue-800 rounded-full text-sm font-medium border border-blue-200">
                                    @skill
                                </span>
                            }
                        </div>
                    </div>
                }

                <!-- About Company -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">
                        <i class="fas fa-building text-green-600 mr-2"></i>About @Model.Job.CompanyName
                    </h2>
                    <p class="text-gray-700 mb-4">@Model.Job.CompanyDescription</p>
                    @if (!string.IsNullOrEmpty(Model.Job.CompanyWebsite))
                    {
                        <a href="@Model.Job.CompanyWebsite" target="_blank"
                           class="inline-flex items-center text-blue-600 hover:text-blue-800">
                            <i class="fas fa-external-link-alt mr-2"></i>Visit Company Website
                        </a>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Job Info Card -->
                <div class="bg-white rounded-lg shadow p-6 sticky top-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Job Information</h3>

                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-calendar text-blue-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Posted</p>
                                <p class="font-semibold text-gray-900">@Model.GetRelativeTime(Model.Job.PostedDate)</p>
                            </div>
                        </div>

                        @if (Model.Job.ClosingDate.HasValue)
                        {
                            <div class="flex items-start">
                                <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-clock text-red-600"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-gray-500">Deadline</p>
                                    <p class="font-semibold text-gray-900">@Model.GetDaysRemaining(Model.Job.ClosingDate)</p>
                                    <p class="text-xs text-gray-500">@Model.Job.ClosingDate.Value.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        }

                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-user-tie text-green-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Contact Person</p>
                                <p class="font-semibold text-gray-900">@Model.Job.RecruiterName</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-users text-purple-600"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-500">Applicants</p>
                                <p class="font-semibold text-gray-900">@Model.Job.ApplicationCount people applied</p>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="mt-6 pt-6 border-t space-y-3">
                        <a asp-page="/BrowseJobs"
                           class="block w-full text-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>Back to Jobs
                        </a>

                        @if (Model.CanApply)
                        {
                            <a asp-page="/ApplyJob" asp-route-jobId="@Model.Job.Id"
                               class="block w-full text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold">
                                <i class="fas fa-paper-plane mr-2"></i>Apply Now
                            </a>
                        }
                    </div>
                </div>

                <!-- Share Job -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Share this job</h3>
                    <div class="flex space-x-3">
                        <button class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                            <i class="fab fa-linkedin"></i>
                        </button>
                        <button class="flex-1 px-4 py-2 bg-blue-400 text-white rounded-lg hover:bg-blue-500">
                            <i class="fab fa-twitter"></i>
                        </button>
                        <button class="flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                            <i class="fab fa-whatsapp"></i>
                        </button>
                        <button class="flex-1 px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
                            <i class="fas fa-link"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
