@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.Jobs.DetailsModel
@{
    ViewData["Title"] = Model.Job.Title;
}

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Back Button -->
    <div class="mb-6">
        <a href="/Jobs/Browse" class="text-blue-600 hover:text-blue-700 font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Back to Job Search
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Job Header -->
            <div class="bg-white shadow-lg rounded-xl p-8">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                        <h1 class="text-4xl font-bold text-gray-800 mb-3">@Model.Job.Title</h1>
                        <p class="text-xl text-gray-600 mb-4">
                            <i class="fas fa-building mr-2"></i>@Model.Job.Company.Name
                        </p>
                    </div>
                    @if (Model.Job.Salary.HasValue)
                    {
                        <div class="text-right">
                            <p class="text-3xl font-bold text-green-600">
                                $@Model.Job.Salary.Value.ToString("N0")
                            </p>
                            <p class="text-sm text-gray-500">per year</p>
                        </div>
                    }
                </div>

                <!-- Job Meta Info -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                    <div class="flex items-center text-gray-600">
                        <i class="fas fa-map-marker-alt mr-2 text-blue-500"></i>
                        <span>@Model.Job.Location</span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <i class="fas fa-briefcase mr-2 text-blue-500"></i>
                        <span>@Model.Job.Type.ToString()</span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <i class="fas fa-layer-group mr-2 text-blue-500"></i>
                        <span>@Model.Job.Category.ToString()</span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <i class="fas fa-graduation-cap mr-2 text-blue-500"></i>
                        <span>@Model.Job.ExperienceLevel.ToString()</span>
                    </div>
                </div>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-6">
                    <span class="px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                        @Model.Job.Category.ToString()
                    </span>
                    <span class="px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">
                        @Model.Job.ExperienceLevel.ToString() Level
                    </span>
                    <span class="px-4 py-2 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                        @Model.Job.Type.ToString()
                    </span>
                </div>

                <!-- Apply Button -->
                @if (Model.IsAuthenticated && Model.IsApplicant)
                {
                    @if (Model.HasAlreadyApplied)
                    {
                        <div class="bg-gray-100 text-gray-600 text-center px-6 py-4 rounded-lg font-semibold">
                            <i class="fas fa-check-circle mr-2"></i>You have already applied to this job
                        </div>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Apply">
                            <input type="hidden" name="jobId" value="@Model.Job.Id" />
                            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-4 rounded-lg font-semibold text-lg transition-colors">
                                <i class="fas fa-paper-plane mr-2"></i>Apply Now
                            </button>
                        </form>
                    }
                }
                else if (!Model.IsAuthenticated)
                {
                    <a href="/Login?returnUrl=/Jobs/Details?id=@Model.Job.Id" class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center px-6 py-4 rounded-lg font-semibold text-lg transition-colors">
                        <i class="fas fa-sign-in-alt mr-2"></i>Login to Apply
                    </a>
                }
                else
                {
                    <div class="bg-yellow-100 text-yellow-800 text-center px-6 py-4 rounded-lg font-semibold">
                        <i class="fas fa-info-circle mr-2"></i>Only applicants can apply for jobs
                    </div>
                }
            </div>

            <!-- Job Description -->
            <div class="bg-white shadow-lg rounded-xl p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-align-left mr-2 text-blue-500"></i>Job Description
                </h2>
                <div class="prose max-w-none text-gray-700 leading-relaxed whitespace-pre-line">
                    @Model.Job.Description
                </div>
            </div>

            <!-- Required Skills -->
            @if (Model.Job.RequiredSkills.Any())
            {
                <div class="bg-white shadow-lg rounded-xl p-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">
                        <i class="fas fa-tools mr-2 text-blue-500"></i>Required Skills
                    </h2>
                    <div class="flex flex-wrap gap-3">
                        @foreach (var skillReq in Model.Job.RequiredSkills)
                        {
                            <span class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium">
                                @skillReq.Skill.Name
                            </span>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Company Info Card -->
            <div class="bg-white shadow-lg rounded-xl p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-building mr-2 text-blue-500"></i>About Company
                </h3>

                @if (!string.IsNullOrEmpty(Model.Job.Company.LogoPath))
                {
                    <img src="@Model.Job.Company.LogoPath" alt="@Model.Job.Company.Name" class="w-full h-32 object-contain mb-4 rounded-lg bg-gray-50 p-4" />
                }

                <h4 class="text-lg font-semibold text-gray-800 mb-2">@Model.Job.Company.Name</h4>

                @if (!string.IsNullOrEmpty(Model.Job.Company.Description))
                {
                    <p class="text-gray-600 text-sm mb-4 line-clamp-4">
                        @Model.Job.Company.Description
                    </p>
                }

                <div class="space-y-2 text-sm">
                    @if (!string.IsNullOrEmpty(Model.Job.Company.Industry))
                    {
                        <p class="text-gray-600">
                            <i class="fas fa-industry mr-2"></i>@Model.Job.Company.Industry
                        </p>
                    }
                    @if (Model.Job.Company.EmployeeCount.HasValue)
                    {
                        <p class="text-gray-600">
                            <i class="fas fa-users mr-2"></i>@Model.Job.Company.EmployeeCount employees
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Job.Company.Website))
                    {
                        <p>
                            <a href="@Model.Job.Company.Website" target="_blank" class="text-blue-600 hover:text-blue-700">
                                <i class="fas fa-globe mr-2"></i>Company Website
                            </a>
                        </p>
                    }
                </div>
            </div>

            <!-- Job Stats -->
            <div class="bg-white shadow-lg rounded-xl p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-chart-bar mr-2 text-blue-500"></i>Job Stats
                </h3>
                <div class="space-y-3">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Posted</span>
                        <span class="font-semibold text-gray-800">
                            @Model.Job.PostedDate.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                    @if (Model.Job.ClosingDate.HasValue)
                    {
                        <div class="flex justify-between items-center">
                            <span class="text-gray-600">Closes</span>
                            <span class="font-semibold text-gray-800">
                                @Model.Job.ClosingDate.Value.ToString("MMM dd, yyyy")
                            </span>
                        </div>
                    }
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Applications</span>
                        <span class="font-semibold text-gray-800">
                            @Model.Job.Applications.Count
                        </span>
                    </div>
                </div>
            </div>

            <!-- Share & Save -->
            <div class="bg-white shadow-lg rounded-xl p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">Share This Job</h3>
                <div class="flex gap-3">
                    <button onclick="shareJob('twitter')" class="flex-1 bg-blue-400 hover:bg-blue-500 text-white px-4 py-2 rounded-lg transition-colors">
                        <i class="fab fa-twitter"></i>
                    </button>
                    <button onclick="shareJob('linkedin')" class="flex-1 bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-lg transition-colors">
                        <i class="fab fa-linkedin"></i>
                    </button>
                    <button onclick="shareJob('email')" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors">
                        <i class="fas fa-envelope"></i>
                    </button>
                    <button onclick="copyLink()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg transition-colors">
                        <i class="fas fa-link"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <script>
        alert('@TempData["Success"]');
    </script>
}

<script>
    function shareJob(platform) {
        const url = window.location.href;
        const title = '@Model.Job.Title at @Model.Job.Company.Name';

        let shareUrl = '';
        switch(platform) {
            case 'twitter':
                shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`;
                break;
            case 'linkedin':
                shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
                break;
            case 'email':
                shareUrl = `mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(url)}`;
                break;
        }

        if (shareUrl) {
            window.open(shareUrl, '_blank');
        }
    }

    function copyLink() {
        navigator.clipboard.writeText(window.location.href).then(() => {
            alert('Link copied to clipboard!');
        });
    }
</script>
