            }

        .btn-outline-glow {
            border: 2px solid #fbbf24;
            color: #fbbf24;
            background: transparent;
            transition: all 0.2s ease;
        }

            .btn-outline-glow:hover {
                background: #fbbf24;
                color: #1f2937;
            }

        /* Navigation */
