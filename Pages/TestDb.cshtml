@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.TestDbModel

<div class="container mt-5">
    <h2>Database Stability Test</h2>

    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h5>Connection Status</h5>
        </div>
        <div class="card-body">
            <div class="alert @(Model.ConnectionStatus.Contains("✅") ? "alert-success" : "alert-danger")">
                <h6>@Model.ConnectionStatus</h6>
            </div>

            @if (!string.IsNullOrEmpty(Model.ApplicantsCount))
            {
                <div class="alert @(Model.ApplicantsCount.Contains("✅") ? "alert-success" : "alert-warning")">
                    @Model.ApplicantsCount
                </div>
            }
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h5>Database Details</h5>
        </div>
        <div class="card-body">
            @if (Model.DatabaseDetails.Any())
            {
                <ul class="list-group">
                    @foreach (var detail in Model.DatabaseDetails)
                    {
                        <li class="list-group-item">@detail</li>
                    }
                </ul>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="card mt-4">
            <div class="card-header bg-danger text-white">
                <h5>Error Details</h5>
            </div>
            <div class="card-body">
                <code>@Model.ErrorMessage</code>
            </div>
        </div>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-primary">Back to Home</a>
        <button onclick="location.reload()" class="btn btn-secondary">Test Again</button>
    </div>
</div>