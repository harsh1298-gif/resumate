@page
@model RESUMATE_FINAL_WORKING_MODEL.Pages.RecruiterDashboardModel
@{
    ViewData["Title"] = "Recruiter Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResuMate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Recruiter Dashboard</h1>
                    <p class="mt-1 text-sm text-gray-600">Welcome back, @Model.Dashboard.RecruiterName!</p>
                </div>
                <div class="flex items-center space-x-4">
                    <a asp-page="/Index" class="text-gray-600 hover:text-gray-900">Home</a>
                    <form method="post" asp-page="/Logout">
                        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">

            <!-- Warning Message -->
            @if (TempData["Warning"] != null)
            {
                <div class="mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                @TempData["Warning"]
                            </p>
                        </div>
                    </div>
                </div>
            }

            <!-- Company Info -->
            <div class="bg-white shadow rounded-lg p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">
                    <i class="fas fa-building text-blue-600 mr-2"></i>
                    @Model.Dashboard.CompanyName
                </h2>
                <p class="text-gray-600">
                    <i class="fas fa-envelope text-gray-500 mr-2"></i>
                    @Model.Dashboard.RecruiterEmail
                </p>
            </div>

            <!-- Statistics Grid -->
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
                <!-- Active Jobs -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
                                <i class="fas fa-briefcase text-white text-xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Active Jobs</dt>
                                    <dd class="text-2xl font-semibold text-gray-900">@Model.Dashboard.Statistics.ActiveJobsCount</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Applicants -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                                <i class="fas fa-users text-white text-xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Total Applicants</dt>
                                    <dd class="text-2xl font-semibold text-gray-900">@Model.Dashboard.Statistics.TotalApplicantsCount</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pending Review -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
                                <i class="fas fa-clock text-white text-xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Pending Review</dt>
                                    <dd class="text-2xl font-semibold text-gray-900">@Model.Dashboard.Statistics.PendingReviewCount</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shortlisted -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
                                <i class="fas fa-star text-white text-xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Shortlisted</dt>
                                    <dd class="text-2xl font-semibold text-gray-900">@Model.Dashboard.Statistics.ShortlistedCount</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hired -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
                                <i class="fas fa-user-check text-white text-xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Hired</dt>
                                    <dd class="text-2xl font-semibold text-gray-900">@Model.Dashboard.Statistics.HiredCount</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Scheduled Interviews -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-pink-500 rounded-md p-3">
                                <i class="fas fa-calendar-check text-white text-xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Scheduled Interviews</dt>
                                    <dd class="text-2xl font-semibold text-gray-900">@Model.Dashboard.Statistics.ScheduledInterviewsCount</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Applicants -->
            @if (Model.Dashboard.RecentApplicants?.Any() == true)
            {
                <div class="bg-white shadow rounded-lg p-6 mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-users text-green-600 mr-2"></i>
                        Recent Applicants
                    </h3>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applicant</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Title</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applied Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var applicant in Model.Dashboard.RecentApplicants.Take(10))
                                {
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-10 w-10">
                                                    <img class="h-10 w-10 rounded-full" src="@applicant.ProfilePhoto" alt="@applicant.Name">
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">@applicant.Name</div>
                                                    <div class="text-sm text-gray-500">@applicant.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">@applicant.JobTitle</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-500">@applicant.AppliedDate</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            @{
                                                var statusColor = applicant.Status switch
                                                {
                                                    "Pending" => "bg-yellow-100 text-yellow-800",
                                                    "Shortlisted" => "bg-green-100 text-green-800",
                                                    "Rejected" => "bg-red-100 text-red-800",
                                                    "Hired" => "bg-blue-100 text-blue-800",
                                                    _ => "bg-gray-100 text-gray-800"
                                                };
                                            }
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusColor">
                                                @applicant.Status
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <a href="#" class="text-blue-600 hover:text-blue-900 mr-3">View</a>
                                            <a href="#" class="text-green-600 hover:text-green-900">Review</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <!-- Active Jobs -->
            @if (Model.Dashboard.ActiveJobs?.Any() == true)
            {
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-briefcase text-blue-600 mr-2"></i>
                        Active Job Postings
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        @foreach (var job in Model.Dashboard.ActiveJobs)
                        {
                            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                                <h4 class="font-semibold text-gray-900 mb-2">@job.Title</h4>
                                <div class="space-y-1 text-sm text-gray-600">
                                    <p><i class="fas fa-map-marker-alt mr-2"></i>@job.Location</p>
                                    <p><i class="fas fa-building mr-2"></i>@job.Department</p>
                                    <p><i class="fas fa-clock mr-2"></i>@job.JobType</p>
                                </div>
                                <div class="mt-3 flex justify-between items-center">
                                    <div>
                                        <span class="text-sm font-medium text-blue-600">@job.ApplicantCount applicants</span>
                                        @if (job.NewApplicantCount > 0)
                                        {
                                            <span class="ml-2 bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">@job.NewApplicantCount new</span>
                                        }
                                    </div>
                                </div>
                                <div class="mt-3 text-xs text-gray-500">
                                    Posted: @job.PostedDate
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Quick Actions -->
            <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
                <a href="#" class="bg-blue-600 text-white p-4 rounded-lg hover:bg-blue-700 transition-colors text-center">
                    <i class="fas fa-plus-circle text-2xl mb-2"></i>
                    <p class="font-semibold">Post New Job</p>
                </a>
                <a href="#" class="bg-green-600 text-white p-4 rounded-lg hover:bg-green-700 transition-colors text-center">
                    <i class="fas fa-search text-2xl mb-2"></i>
                    <p class="font-semibold">Browse Applicants</p>
                </a>
                <a href="#" class="bg-purple-600 text-white p-4 rounded-lg hover:bg-purple-700 transition-colors text-center">
                    <i class="fas fa-calendar-alt text-2xl mb-2"></i>
                    <p class="font-semibold">Schedule Interview</p>
                </a>
            </div>

        </div>
    </main>

    <script>
        console.log('Recruiter Dashboard loaded successfully');
    </script>
</body>
</html>
